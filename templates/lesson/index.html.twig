{% extends 'responsive.html.twig' %}

{% block title %}{{ parent() }} - Liste des créneaux{% endblock %}

{% block body %}
        <div class="table-wrapper center">
            <div class="table-title">
                <h1>Liste des créneaux</h1>
            </div>
            {% for lesson in pagination %}
                <div class="div-creneaux margin10auto">
                    <p>{{ lesson.name }} - {{lesson.classGroup.name}}</p>
                    <p>{{ lesson.dateStart|date('d-m-Y h:m') }} à {{ lesson.dateEnd|date('d-m-Y h:m') }}</p>
                    <p><a href={{"/lesson/" ~ lesson.id}}>Faire l'appel</a></p>
                    {% if lesson.dateStart >= date() and lesson.dateEnd <= date() %}
                        
                    {% endif %}
                </div>
            {% else %}
                <tr>
                    <td colspan="7">Aucun cours pour le moment.</td>
                </tr>
            {% endfor %}
        </div>
{% endblock %}
